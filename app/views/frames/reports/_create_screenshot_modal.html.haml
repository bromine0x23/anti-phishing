#create-screenshot-modal.modal.fade{ role: 'dialog', aria: { labelledby: 'create-screenshot-modal-label' }, tabindex: -1 }
	.modal-dialog{ role: 'document' }
		.modal-content
			-#= simple_form_for :'screenshot[create]', method: :post, remote: true, wrapper: 'vertical_form' do |form|
				.modal-header
					%button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: translate('modal.close') } }
						%span.fa.fa-times
					%h4#show-report-modal-label.modal-title
						%span.fa.fa-upload
							= translate('screenshots.create.title')
				.modal-body
					.row
						.col-md-12.form-group
							= form.label :screenshot, class: 'control-label', accept: 'image/jpeg' do
								选择文件
							= form.file_field :screenshot, class: 'form-control', required: true
				.modal-footer
					%button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
						= translate('modal.close')
					%button.btn.btn-primary{ type: 'submit' }
						= translate('screenshots.create.submit')